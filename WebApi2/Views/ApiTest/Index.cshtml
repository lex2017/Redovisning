@model IEnumerable<CodingAssignment.Spotify.ApiClient.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center label-info" >Recommended Songs</h2>

<p>
   
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Popularity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genres)
        </th>
        

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td >
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Popularity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genres)
            </td>
            <td>

                @foreach (var url in item.Images.Skip(1).Take(1))
                {
                <td>
                    <img class="img-circle" src="@Url.Content(url.Url)" alt="IMAGES" />
                    @*@Html.DisplayFor(modelItem => url.Url)*@
                </td>
                }
               </td>
            <th></th>
            </tr>
    }

</table>
